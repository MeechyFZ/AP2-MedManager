
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - MedManager</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
		<link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.css" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	</head>
	<body>
		<nav class="navbar">
			@if (User?.Identity?.IsAuthenticated == true)
			{
				<div class="nav-links">
					<a class="navbar-brand">MedManager</a>
					<a asp-controller="Tableaudebord" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tableaudebord" ? "active" : "")">Tableau de bord</a>
					<a asp-controller="Patient" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patient" ? "active" : "")">Mes patients</a>
					<a asp-controller="Ordonnance" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Ordonnance" ? "active" : "")">Mes ordonnances</a>
					<a asp-controller="Medicament" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Medicament" ? "active" : "")">Médicaments</a>
					<a asp-controller="ContreIndications" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "ContreIndications" ? "active" : "")">Contre indications</a>
				</div>
				<div class="user-actions">
					<span class="username">Bonjour, @User.Identity.Name!</span>
					<a asp-controller="Parametres" asp-action="Index" class="settings-icon" data-bs-toggle="tooltip" title="Paramètres"><i class="bi bi-gear"></i></a>
					<a asp-controller="Compte" asp-action="Deconnexion">Déconnexion</a>
				</div>
			}
			else
			{
				<a class="navbar-brand">MedManager</a>
				<div class="nav-links">
					<a asp-controller="Accueil" asp-action="Index">Accueil</a>
					<a asp-controller="Compte" asp-action="Connexion">Login</a>
				</div>
			}
		</nav>

		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>

		<footer>
			<div class="copyright">© 2024 - MedManager</div>
			<div class="footer-links">
				<a asp-controller="Support" asp-action="Contact">Contact</a>
				<a asp-controller="Support" asp-action="FAQ">F.A.Q</a>
			</div>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://davidstutz.github.io/bootstrap-multiselect/docs/js/jquery-2.2.4.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
		<script src="~/js/site.js"></script>
		@await RenderSectionAsync("Scripts", required: false)
	</body>
</html>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		var toastElements = document.querySelectorAll('.toast');
		toastElements.forEach(function (toastElement) {
			var toast = new bootstrap.Toast(toastElement);
			toast.show();
		});
	});
</script>
