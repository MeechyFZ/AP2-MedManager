<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MedManager</title>


	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MedManager.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
	@* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" /> *@
	<link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	@* <link href="~/css/bootstrap-multiselect.css" rel="stylesheet" /> *@
	


</head>
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Medecin" asp-action="Index">MedManager</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<ul class="navbar-nav flex-grow-1">

					@if (User?.Identity?.IsAuthenticated == true)
					{
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Medecin" asp-action="TableauBord">Tableau de bord</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="Index">Mes patients</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Ordonnance" asp-action="Index">Mes ordonnances</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Medicament" asp-action="Index">Médicaments</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="ContreIndications" asp-action="Index">Contre indications</a>
						</li>
						<li class="navbar-text">
							Bonjour, @User.Identity.Name!,
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-action="Index" asp-controller="Parametres"><i class="bi bi-gear"></i></a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-action="Deconnexion" asp-controller="Compte">Déconnexion</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="A" asp-action="Index">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-action="Connexion" asp-controller="Compte">Login</a>
						</li>
					}

				</ul>
			</div>

		</nav>
	</header>
	<div class="container" style="flex:1;">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted" style="position: relative">
		<div class="container">
			&copy; 2024 - MedManager - <a asp-controller="Support" asp-action="Contact">Contact</a> <a asp-controller="Support" asp-action="FAQ">F.A.Q</a>
		</div>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
	<script src="https://davidstutz.github.io/bootstrap-multiselect/docs/js/jquery-2.2.4.min.js"></script>
@* 	<script src="https://davidstutz.github.io/bootstrap-multiselect/docs/js/bootstrap.bundle-4.5.2.min.js"></script>
	<script src="https://davidstutz.github.io/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script> *@
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
	<script src="~/js/site.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
