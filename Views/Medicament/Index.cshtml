		const TriActuel = '@ViewData["CategorieParamTri"]';
		const CateActuel = document.querySelector('[name="FiltreCate"]').value;
		const Url = `@Url.Action("Index")?Filtre=${encodeURIComponent(filtre)}&OrdreTri=${TriActuel}&FiltreCate=${CateActuel}`;

		console.log("FiltreActuel au moment du tri par catégorie:", filtre);

		history.pushState(null, '', Url);

		fetch(Url, {
			headers: { 'X-Requested-With': 'XMLHttpRequest' }
