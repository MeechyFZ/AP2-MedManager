@model List<Medicament>

<h1>Médicaments</h1>
<form asp-action="Index" method="get" class="mt-3">
	<div class="col-12 input-group mb-3">
		<input type="hidden" name="Filtre" value="@ViewData["FiltreActuel"]" />
		<input type="hidden" name="OrdreTri" value="@ViewData["TriActuel"]" />

		<input type="text" class="col-4 form-control" id="RechercheEntree" placeholder="Rechercher..."
			   value="@ViewData["FiltreActuel"]" />
		<div class="col-3">
			<select class="form-control" name="FiltreCate">
				<option value="">Sélectionnez la catégorie</option>
				@foreach (var cate in Enum.GetValues(typeof(CategorieEnum)))
				{
					<option value="@cate">@cate</option>
				}
			</select>
		</div>
		<button class="btn btn-outline-primary" type="submit">Rechercher</button>
	</div>
</form>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				<a id="triNom" class="text-dark">
					Nom
					@if (ViewData["TriActuel"]?.ToString() == "nom_desc")
					{
						<i class="bi bi-arrow-down-short"></i>
					}
					else if (ViewData["TriActuel"]?.ToString() == "")
					{
						<i class="bi bi-arrow-up-short"></i>
					}
				</a>
			</th>
			<th>Quantite</th>
			<th>Posologie</th>
			<th>Composition</th>
			<th>
				<a id="triCategorie" class="text-dark">
					Catégorie
					@if (ViewData["TriActuel"]?.ToString() == "categorie_desc")
					{
						<i class="bi bi-arrow-down-short"></i>
					}
					else if (ViewData["TriActuel"]?.ToString() == "categorie_asc")
					{
						<i class="bi bi-arrow-up-short"></i>
					}
				</a>
			</th>
			<th>Détail</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody id="MedicamentListContainer">
		@foreach (var m in Model)
		{
			<tr>

				<td>@m.Nom</td>
				<td>@m.Quantite</td>
				<td>@m.Posologie</td>
				<td>@m.Composition</td>
				<td>@m.Categorie</td>
				<td>
					<a asp-action="Detail" asp-controller="Medicament" asp-route-id="@m.MedicamentId">
						<i class="bi bi-eye"></i>
					</a>
				</td>

				<td>
					<a asp-action="Modifier" asp-controller="Medicament" asp-route-id="@m.MedicamentId">
						<i class="bi bi-pen"></i>
					</a>
				</td>
				<td>
					<a href="#" data-bs-toggle="modal" data-bs-target="#Modal-@m.MedicamentId">
						<i class="bi bi-trash"></i>
					</a>

					<div class="modal fade" id="Modal-@m.MedicamentId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered">
							<div class="modal-content">
								<div class="modal-header">
									<h1 class="modal-title fs-5" id="exampleModalLabel">Suppression médicament</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-body">
									Confirmez-vous la suppression du médicament : <strong>@m.Nom</strong> ?
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
									<a asp-action="Supprimer"
									   asp-controller="Medicament"
									   asp-route-id="@m.MedicamentId"
									   class="btn btn-danger">
										Confirmer
									</a>
								</div>
							</div>
						</div>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="row">
	<div class="col-8">
		<p>
			<a asp-action="Ajouter" class="btn btn-primary">Ajouter un medicament</a>
		</p>
	</div>
</div>

<script>
	const RechercheEntree = document.getElementById('RechercheEntree');
	let timeoutId;

	RechercheEntree.addEventListener('input', () => {
		clearTimeout(timeoutId);
		timeoutId = setTimeout(MajMedicament(), 500);
	});

	function MajMedicament() {
		const TriActuel = '@ViewData["TriActuel"]';
		const CateActuel = '@ViewData["FiltreCateActuel"]'
		console.log("MajMed", TriActuel, CateActuel)
		const requete = encodeURIComponent(RechercheEntree.value)
		const Url = `@Url.Action("Index")?Filtre=${requete}&OrdreTri=${TriActuel}&FiltreCate=${CateActuel}`;


		history.pushState(null, '', Url);

		fetch(Url, {
			headers: { 'X-Requested-With': 'XMLHttpRequest' }
		})
			.then(response => response.text())
			.then(html => {
				const tempDiv = document.createElement('div');
				tempDiv.innerHTML = html;
				const MedicamentsFiltres = tempDiv.querySelector('#MedicamentListContainer').innerHTML;
				document.getElementById('MedicamentListContainer').innerHTML = MedicamentsFiltres;
			});
	}
</script>

