@model Medicament

@{
    ViewData["Title"] = "Modifier un médicament";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h2>Modifier un Médicament</h2>
        </div>
        <div class="card-body">
            <form asp-action="Modifier" asp-controller="Medicament" method="post">
                <input type="hidden" asp-for="MedicamentId" />
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Nom" class="form-label"></label>
                        <div class="input-group input-group-merge">
                            <input asp-for="Nom" class="form-control @(ViewData.ModelState["Nom"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Nom du médicament" />
                            <span asp-validation-for="Nom" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Quantite" class="form-label"></label>
                        <div class="input-group input-group-merge">
                            <input asp-for="Quantite" class="form-control @(ViewData.ModelState["Quantite"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                            <span asp-validation-for="Quantite" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Posologie" class="form-label"></label>
                        <div class="input-group input-group-merge">
                            <input asp-for="Posologie" class="form-control @(ViewData.ModelState["Posologie"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                            <span asp-validation-for="Posologie" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Composition" class="form-label"></label>
                        <div class="input-group input-group-merge">
                            <input asp-for="Composition" class="form-control @(ViewData.ModelState["Composition"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                            <span asp-validation-for="Composition" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Categorie" class="form-label"></label>
                        <div class="input-group input-group-merge">
                            <select asp-for="Categorie" class="form-control @(ViewData.ModelState["Categorie"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                <option value="">Sélectionnez la catégorie</option>
                                @foreach (var categorie in Enum.GetValues(typeof(CategorieEnum)))

                                {
                                    <option value="@categorie">@categorie</option>
                                }
                            </select>
                            <span asp-validation-for="Categorie" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-outline-primary">Modifier le médicament</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-start">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-return-left"> Retour</i>
        </a>
    </div>
</div>
