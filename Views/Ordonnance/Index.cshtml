@model IndexOrdonnanceViewModel
@{
	ViewData["Title"] = "Mes ordonnances";
}

@if (TempData["MessageSucces"] != null)

{
	<div id="tempMessage" class="alert alert-success">
		@TempData["MessageSucces"]
	</div>
}

@if (TempData["MessageErreur"] != null)

{
	<div id="tempMessage" class="alert alert-danger">
		@TempData["MessageErreur"]
	</div>
}

<div class="text-center">
	<div>
		<a asp-action="SelectionPatient" asp-controller="Ordonnance" class="btn btn-primary">Nouvelle ordonnance</a>
	</div>

	<form asp-action="Index" method="get" class="mt-3">
		<div class="input-group mb-3">
			<input type="text" name="Filtre" class="form-control" placeholder="Rechercher par nom ou prénom du patient" value="@ViewData["FiltreActuel"]" />
			<button class="btn btn-outline-primary" type="submit">Rechercher</button>
		</div>
	</form>

	<div class="row mt-3">
		@foreach (var o in Model.Ordonnances)
		{
			<div class="col-md-4 mb-3">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">@o.Patient?.NomComplet</h5>
						<p class="card-text"> Date de début : @o.DateDebut.ToString("dd/MM/yyyy") </p>
						<p class="card-text"> Date de fin : @o.DateFin.ToString("dd/MM/yyyy") </p>

						<a asp-action="Detail" asp-controller="Ordonnance" asp-route-id="@o.OrdonnanceId">
							<i class="bi bi-eye"></i>
						</a>
						<a asp-action="Editer" asp-controller="Ordonnance" asp-route-id="@o.OrdonnanceId">
							<i class="bi bi-pencil"></i>
						</a>
						<a href="#" data-bs-toggle="modal" data-bs-target="#Modal-@o.OrdonnanceId">
							<i class="bi bi-trash"></i>
						</a>

						<div class="modal fade" id="Modal-@o.OrdonnanceId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">Suppression ordonnance</h1>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										Confirmez-vous la suppression du patient : <strong>@o.Patient.Ordonnances</strong> ?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
										<a asp-action="Supprimer"
										   asp-controller="Ordonnance"
										   asp-route-id="@o.OrdonnanceId"
										   class="btn btn-danger">
											Confirmer
										</a>
									</div>
								</div>
							</div>
						</div>
						<a asp-action="GenererPdf" asp-controller="Ordonnance" asp-route-ordonnanceId="@o.OrdonnanceId" asp-route-patientId="@o.PatientId">
							<i class="bi bi-filetype-pdf"></i>
						</a>

					</div>
				</div>
			</div>
		}
	</div>

	<div class="d-flex justify-content-center">
		@Html.PagedListPager(Model.Ordonnances, page => Url.Action("Index", new { page }))
	</div>
</div>

<script>
	window.addEventListener('DOMContentLoaded', (event) => {
		const tempMessage = document.getElementById("tempMessage");
		if (tempMessage) {
			setTimeout(() => {
				tempMessage.style.display = "none";
			}, 3000);
		}
	});
</script>
