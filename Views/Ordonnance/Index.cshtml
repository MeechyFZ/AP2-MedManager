@model IndexOrdonnanceViewModel
@{
	ViewData["Title"] = "Mes ordonnances";
}

<div class="text-center">
	<div>
		<a asp-action="Ajouter" asp-controller="Ordonnance" class="btn btn-primary">Créer une ordonnance</a>
	</div>

	<form asp-action="Index" method="get" class="mt-3">
		<div class="input-group mb-3">
			<input type="text" name="searchString" class="form-control" placeholder="Rechercher par nom ou prénom du patient" value="@ViewData["CurrentFilter"]" />
			<button class="btn btn-outline-primary" type="submit">Rechercher</button>
		</div>
	</form>

	<div class="row mt-3">
		@foreach (var o in Model.Ordonnances)
		{
			<div class="col-md-4 mb-3">
				<div class="card">
@* 					<div class="row">
						<img class="card-img-top fixed-dimension" src="@Url.Action("GetPhoto", "Patient", new { id = p.PatientId })" alt="Photo du patient">
					</div> *@
					<div class="card-body">
						<h5 class="card-title">@o.Patient.NomComplet</h5>
						@* <p class="card-text">Âge : @(DateTime.Now.Year - p.DateNaissance.Year) ans</p> *@
						<a asp-action="Detail" asp-controller="Patient" asp-route-id="@o.OrdonnanceId">
							<i class="bi bi-eye"></i>
						</a>
						<a asp-action="Editer" asp-controller="Ordonnance" asp-route-id="@o.OrdonnanceId">
							<i class="bi bi-pencil"></i>
						</a>
						<a asp-action="Supprimer" asp-controller="Ordonnance" asp-route-id="@o.OrdonnanceId" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette ordonnance ?');">
							<i class="bi bi-trash"></i>
						</a>
					</div>
				</div>
			</div>
		}
	</div>

	<div class="d-flex justify-content-center">
		@Html.PagedListPager(Model.Ordonnances, page => Url.Action("Index", new { page }))
	</div>
</div>
