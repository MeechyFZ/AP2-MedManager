    @model ConnexionViewModel

@{
    ViewData["Title"] = "Connexion";
}

<h2>Connexion</h2>

<form asp-action="Connexion" method="post">
    <div class="form-group">
        <label asp-for="NomUtilisateur"></label>
        <input asp-for="NomUtilisateur" class="form-control" />
        <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MotDePasse" class="control-label"></label>
        <input asp-for="MotDePasse" class="form-control" />
        <span asp-validation-for="MotDePasse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="SeRappelerDeMoi" class="form-check-input" />
            <label asp-for="SeRappelerDeMoi" class="form-check-label"></label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Connexion</button>
    </div>
</form>

<div class="form-group">
    <p>Vous n'avez pas de compte ? <a asp-action="Inscription" asp-controller="Compte">Inscrivez-vous ici</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}