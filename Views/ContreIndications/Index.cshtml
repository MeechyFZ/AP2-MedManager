@model (List<MedManager.Models.Allergie> Allergies, List<MedManager.Models.Antecedent> Antecedents)

<form asp-action="Index" method="get" class="mt-3">
	<div class="input-group mb-3">
		<input type="text" name="searchStringAllergies" class="form-control" placeholder="Rechercher par allergies" value="@ViewData["CurrentFilterAllergie"]" />
		<button class="btn btn-outline-primary" type="submit">Rechercher</button>
	</div>
</form>

<h1>Allergies</h1>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Nom</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var allergie in Model.Allergies)
		{
			<tr>
				<td>@allergie.Nom</td>
				<td>
					<a asp-action="Modifier" asp-controller="ContreIndications" asp-route-id="@allergie.AllergieId" asp-route-type="Allergie">
						<i class="bi bi-pen"></i>
					</a>
				</td>
				<td>
					<a asp-action="Supprimer" asp-controller="ContreIndications" asp-route-id="@allergie.AllergieId" asp-route-type="Allergie" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette antecédent ?');">
						<i class="bi bi-trash"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="row">
	<div class="col-8">
		<p>
			<a asp-action="Ajouter" asp-route-type="Allergie" class="btn btn-primary">Ajouter une allergie</a>
		</p>
	</div>
</div>

<form asp-action="Index" method="get" class="mt-3">
	<div class="input-group mb-3">
		<input type="text" name="searchStringAntecedents" class="form-control" placeholder="Rechercher par antécedents" value="@ViewData["CurrentFilterAntecedent"]" />
		<button class="btn btn-outline-primary" type="submit">Rechercher</button>
	</div>
</form>


<h1>Antécédents</h1>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Nom</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var antecedent in Model.Antecedents)
		{
			<tr>
				<td>@antecedent.Nom</td>
				<td>
					<a asp-action="Modifier" asp-controller="ContreIndications" asp-route-id="@antecedent.AntecedentId" asp-route-type="Antecedent">
						<i class="bi bi-pen"></i>
					</a>
				</td>
				<td>
					<a asp-action="Supprimer" asp-controller="ContreIndications" asp-route-id="@antecedent.AntecedentId" asp-route-type="Antecedent" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet antecédent ?');">
						<i class="bi bi-trash"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="row">
	<div class="col-8">
		<p>
			<a asp-action="Ajouter" asp-route-type="Antecedent" class="btn btn-primary">Ajouter un antécédent</a>
		</p>
	</div>
</div>

