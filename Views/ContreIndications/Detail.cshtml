@model ContreIndicationViewModel
@{
	ViewData["Title"] = "Détail de l'" + (@Model.Type == "Allergie" ? "allergie" : "antécédent");
}
<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-sm">
				<div class="card-header text-center">
					<h5 class="mb-0">Informations Générales</h5>
				</div>
				<div class="card-body">
					<p><strong>Nom :</strong> @Model.Nom</p>
					<p><strong>Incompatibilités avec les médicaments :</strong></p>
					<ul>
						@if (Model.Medicaments.Any())
						{
							@foreach (var med in Model.Medicaments)
							{
								<li class="badge bg-secondary bg-opacity-25 me-1 text-dark">@med.Nom</li>
							}
						}
						else
						{
							<li>Aucun médicament associé</li>
						}
					</ul>
				</div>
			</div>
			<div class="mt-3 d-flex justify-content-start">
				<a asp-action="Index" class="btn btn-outline-secondary">
					<i class="bi bi-arrow-return-left"></i> Retour
				</a>
			</div>
		</div>
	</div>
</div>
